{% extends('baseadmin.html.twig') %}

{% block body %}
    <form class = 'form-inline mt-1' method = 'POST' action='{{ path('admin.environnement.ajout') }}'>
        <div class = 'form-group mr-1 mb-2'>
            <input type = 'text' class = 'sm' name = "nom">
            <button type = 'submit' class = 'btn btn-primary mb-2 btn-sm'>Ajouter</button>
        </div>
    </form>
    <table class = 'table'>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for env in environnements %}
                <tr>
                    <td>{{ env.nom }}</td>
                    <td>
                        <a onclick = 'return confirm("Êtes-vous sûr de vouloir supprimer {{ env.nom }} ?");' href = '{{ path('admin.environnement.suppr', {id: env.id}) }}' class = 'btn btn-danger'>Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}