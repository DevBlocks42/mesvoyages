{% extends "basefront.html.twig" %}
{% block body %}
    <table class = 'table table-striped'>
        <thead>
            <tr>
                <th class = 'text-left align-top' scope = 'col'>
                    Ville
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'ville', ordre: 'ASC'}) }}'><</a>
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'ville', ordre: 'DESC'}) }}'>></a>
                    <form class = 'form-inline mt-1' method = 'POST' action = '{{ path('voyages.findByEqualValue', {champ: 'ville'}) }}'>
                        <div class = 'form-group mr-1 mv-2'>
                            <input type = 'text' class = 'sm' name = 'recherche'>
                            <button type = 'submit' class = 'btn btn-primary mv-2 btn-sm'>filtrer</button>
                        </div>
                    </form>
                </th>
                <th class = 'text-left align-top' scope = 'col'>
                    Pays
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'pays', ordre: 'ASC'}) }}'><</a>
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'pays', ordre: 'DESC'}) }}'>></a>
                    <form class = 'form-inline mt-1' method = 'POST' action = '{{ path('voyages.findByEqualValue', {champ: 'pays'}) }}'>
                        <div class = 'form-group mr-1 mv-2'>
                            <input type = 'text' class = 'sm' name = 'recherche'>
                            <button type = 'submit' class = 'btn btn-primary mv-2 btn-sm'>filtrer</button>
                        </div>
                    </form>
                </th>
                <th class = 'text-end align-top' scope = 'col'>
                    Note
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'note', ordre: 'ASC'}) }}'><</a>
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'note', ordre: 'DESC'}) }}'>></a>    
                    <form class = 'form-inline mt-1' method = 'POST' action = '{{ path('voyages.findByEqualValue', {champ: 'note'}) }}'>
                        <div class = 'form-group mr-1 mv-2'>
                            <input type = 'text' class = 'sm' name = 'recherche'>
                            <button type = 'submit' class = 'btn btn-primary mv-2 btn-sm'>filtrer</button>
                        </div>
                    </form>
                </th>
                <th class = 'text-center align-top' scope = 'col'>
                    Date
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'datecreation', ordre: 'ASC'}) }}'><</a>
                    <a class = 'btn ptn-primary btn-sm active' role = 'button' aria-pressed = 'true' href = '{{ path('voyages.sort', {champ: 'datecreation', ordre: 'DESC'}) }}'>></a>
                    <form class = 'form-inline mt-1' method = 'POST' action = '{{ path('voyages.findByEqualValue', {champ: 'datecreation'}) }}'>
                        <div class = 'form-group mr-1 mv-2'>
                            <input type = 'text' class = 'sm' name = 'recherche'>
                            <button type = 'submit' class = 'btn btn-primary mv-2 btn-sm'>filtrer</button>
                        </div>
                    </form>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <a href = "{{ path('voyages.showOne', { id: visite.id}) }}" class = 'text-primary'>{{ visite.ville }}</a>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class = 'text-end'>
                        {% if visite.note < 10 %}
                            <div class = 'text-danger'><strong>{{ visite.note }} / 20</strong></div>
                        {% else %}
                            <div class = 'text-success'><strong>{{ visite.note }} / 20</strong></div>
                        {% endif %}
                    </td>
                    <td class = 'text-center'>
                        {{ visite.datecreationstring }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}    